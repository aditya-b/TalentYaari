<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.user.aditya.travelyaari.EditProfile"
    tools:showIn="@layout/activity_edit_profile">

    <ScrollView
        android:id="@+id/scroll_ed"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_edprof"
        android:scrollbars="none"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:elevation="6dp"
                android:src="@drawable/sample_profile"
                android:translationZ="5dp" />

            <LinearLayout
                android:id="@+id/namelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_weight="1.05"
                android:background="@drawable/roudedtextview"
                android:elevation="5dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:translationZ="5dp">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="About"
                    android:textColor="#546E7A"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.05"
                        android:background="@drawable/noborder"
                        android:contextClickable="false"
                        android:drawableLeft="@mipmap/ic_account_circle_black_24dp"
                        android:drawablePadding="10dp"
                        android:editable="false"
                        android:ems="10"
                        android:enabled="false"
                        android:hint="Name"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:text="Name"
                        android:textColor="@drawable/editextcolor" />

                    <ImageButton
                        android:id="@+id/edname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical|end"
                        android:background="@android:color/transparent"
                        android:gravity="end"
                        android:padding="10dp"
                        app:srcCompat="@mipmap/ic_mode_edit_black_24dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.05"
                        android:background="@drawable/noborder"
                        android:contextClickable="false"
                        android:drawableLeft="@mipmap/ic_email_black_24dp"
                        android:drawablePadding="10dp"
                        android:editable="false"
                        android:ems="10"
                        android:enabled="false"
                        android:hint="Email"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:text="Email"
                        android:textColor="@drawable/editextcolor" />

                    <ImageButton
                        android:id="@+id/edemail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical|end"
                        android:layout_margin="10dp"
                        android:background="@android:color/transparent"
                        android:gravity="end"
                        app:srcCompat="@mipmap/ic_mode_edit_black_24dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/passwordlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1.05"
                android:background="@drawable/roudedtextview"
                android:elevation="5dp"
                android:orientation="vertical"
                android:translationZ="5dp">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Security"
                    android:textColor="#546E7A"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.05"
                        android:background="@drawable/noborder"
                        android:contextClickable="false"
                        android:drawableLeft="@mipmap/ic_https_black_24dp"
                        android:drawablePadding="10dp"
                        android:editable="false"
                        android:ems="10"
                        android:enabled="false"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:text="Password"
                        android:textColor="@drawable/editextcolor" />

                    <ImageButton
                        android:id="@+id/edpswrd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical|end"
                        android:layout_margin="10dp"
                        android:background="@android:color/transparent"
                        android:gravity="end"
                        app:srcCompat="@mipmap/ic_mode_edit_black_24dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="RESET CODE:"
                        android:textColor="#546E7A"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/RCODE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:textColor="@android:color/black" />

                    <ImageButton
                        android:id="@+id/help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:padding="5dp"
                        app:srcCompat="@mipmap/ic_help_black_24dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ratinglayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/roudedtextview"
                android:elevation="5dp"
                android:orientation="vertical"
                android:translationZ="5dp">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Rating"
                    android:textColor="#546E7A"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="Administrator:"
                        android:textColor="@android:color/black" />

                    <RatingBar
                        android:id="@+id/arating"
                        style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                        android:layout_width="92dp"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:numStars="5"
                        android:padding="5dp"
                        android:rating="2.5"
                        android:stepSize="0.5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="98dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="Users:"
                        android:textColor="@android:color/black" />

                    <RatingBar
                        android:id="@+id/urating"
                        style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:numStars="5"
                        android:padding="5dp"
                        android:rating="2.5"
                        android:stepSize="0.5" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
